<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/padding_common">
    <data>
        <variable
            name="dataModel"
            type="com.assignment.countrylist.model.Row" />
    </data>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/elevation_card"
        android:background="@color/gray"
        tools:ignore="MissingConstraints"
        tools:targetApi="lollipop">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_common"
            android:background="@color/gray">
            <ImageView
                android:id="@+id/img_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_keyboard_arrow_right_24px"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/img_thumbnail"
                app:layout_constraintTop_toTopOf="@+id/img_thumbnail"
                tools:ignore="ContentDescription" />
            <TextView
                android:id="@+id/tv_heading"
                android:layout_width="@dimen/swipe_height"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_common"
                android:paddingRight="@dimen/padding_common"
                android:text="@{dataModel.title!=null ? dataModel.title :@string/app_name}"
                android:textColor="@color/purple_700"
                android:textSize="@dimen/heading_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />
            <TextView
                android:id="@+id/tv_description"
                android:layout_width="@dimen/swipe_height"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingLeft="@dimen/padding_common"
                android:paddingRight="@dimen/padding_common"
                android:minHeight="@dimen/image_height"
                android:text="@{dataModel.description!=null?dataModel.description:@string/app_name}"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/img_thumbnail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_heading" />
            <ImageView
                android:id="@+id/img_thumbnail"
                android:layout_width="@dimen/image_width"
                android:layout_height="@dimen/image_height"
                android:scaleType="centerCrop"
                app:error="@{@drawable/error}"
                app:imageUrl="@{dataModel.imageHref!=null?dataModel.imageHref:@string/image_issue}"
                app:layout_constraintEnd_toStartOf="@+id/img_arrow"
                app:layout_constraintStart_toEndOf="@+id/tv_description"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="ContentDescription" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>