<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="dataModel"
            type="com.assignment.countrylist.model.Row" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="@dimen/elevation_card"
        android:background="@color/gray"
        tools:ignore="MissingConstraints"
        tools:targetApi="lollipop">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:padding="@dimen/relative_padding">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/img_arrow"
                android:src="@drawable/ic_keyboard_arrow_right_24px"
                android:layout_alignParentEnd="true"
                tools:ignore="ContentDescription" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/img_arrow"
                android:layout_toStartOf="@+id/img_arrow"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_heading"
                    android:paddingRight="@dimen/padding_common"
                    android:paddingLeft="@dimen/padding_common"
                    android:textColor="@color/purple_700"
                    android:textSize="@dimen/heading_size"
                    android:text="@{dataModel.title!=null ? dataModel.title :@string/app_name}"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_heading">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_description"
                        android:layout_toLeftOf="@+id/img_thumbnail"
                        android:gravity="start"
                        android:minHeight="@dimen/image_height"
                        android:paddingLeft="@dimen/padding_common"
                        android:paddingRight="@dimen/padding_common"
                        android:text="@{dataModel.description!=null?dataModel.description:@string/app_name}"
                        android:textColor="@color/black"
                        android:layout_toStartOf="@+id/img_thumbnail"
                        />
                    <ImageView
                        android:layout_width="@dimen/image_width"
                        android:layout_height="@dimen/image_height"
                        android:id="@+id/img_thumbnail"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignBottom="@+id/tv_description"
                        android:scaleType="centerCrop"
                        app:imageUrl="@{dataModel.imageHref!=null?dataModel.imageHref:@string/app_name}"
                        app:error="@{@drawable/success}"
                        tools:ignore="ContentDescription" />
                </RelativeLayout>
            </RelativeLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>